rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // âœ… PRODUCTS COLLECTION
    match /products/{productId} {
      // Anyone can view products
      allow read: if true;
      // Only admins can add, edit, or delete products
      allow write: if isAdmin();
    }

    // âœ… ORDERS COLLECTION
    match /orders/{orderId} {
      // ðŸŸ¢ Customers: can read only their own orders
      allow read: if request.auth != null
                  && request.auth.token.email == resource.data.userId;

      // ðŸŸ¢ Customers: can create (place) their own order
      allow create: if request.auth != null
                    && request.resource.data.userId == request.auth.token.email;

      // ðŸš« Customers cannot update existing orders
      allow update, delete: if false;

      // ðŸŸ£ Admins: full read/write access to all orders
      allow read, write: if isAdmin();
    }

    // âœ… HELPER FUNCTION â€” identify admin accounts
    function isAdmin() {
      return request.auth != null &&
             request.auth.token.email in [
               "mohitkmr8566@gmail.com",
               "warea.admin@gmail.com"
             ];
    }
  }
}
